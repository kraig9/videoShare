body {
  background-image: url(<%= asset_path 'Background.jpg' %>);
}

a.relative {
  position: relative;
  top: 30px;
}

img {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  width: 200px;
  height: 100%;
  background-color: #f1f1f1;
}

li a {
  display: block;
  color: #000;
  padding: 8px 16px;
  text-decoration: none;
}

.active {
  background-color: #0000FF;
  color: white;
}

.relative {
  position: relative;
  top: 30px;
}

li a:hover:not(.active) {
  background-color: #555;
  color: white;
}